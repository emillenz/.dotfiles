set nocompatible
set hidden
set autoindent
set autowriteall
set ignorecase
set smartcase
set incsearch
set smarttab
set confirm
set backupdir=~/.vim//,/tmp//
set directory=~/.vim//,/tmp//
set path=**
set shortmess=a
set completeopt=
set wildmode=longest:full
set wildignore=*.o
set wildmenu
set wildignorecase
set gdefault
set autoread
set relativenumber
set showmatch
set noruler
set noshowmode
set laststatus=0
set fillchars=eob:\ "
set timeoutlen=1000
set ttimeoutlen=0

nnoremap Y y$
nnoremap _ "_d
vnoremap _ "_d

vnoremap ( <esc>a)<esc>gvo<esc>i(
nnoremap ds( va(<esc>xgvo<esc>x

inoremap {<cr> {<cr>}<esc>O<tab>
