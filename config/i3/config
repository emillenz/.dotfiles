# ---
# title: i3 minimalist config
# author: emil lenz
# email: emillenz@protonmail.com
# date: [2023-05-15]
# ---

set $SHCMD exec --no-startup-id

set $BG		#ffffff
set $FG		#000000
set $BORDER	#9f9f9f
set $URG	#ff8f88
set $STATUS_BG	#c8c8c8

set $SHCMD_ON_RESTART exec_always --no-startup-id

$SHCMD_ON_RESTART emacsclient --reuse-frame || (emacs --daemon && emacsclient --create-frame)
$SHCMD_ON_RESTART pgrep firefox || firefox
$SHCMD_ON_RESTART pgrep thunderbird || thunderbird
$SHCMD_ON_RESTART pgrep -x keepassxc || keepassxc

$SHCMD_ON_RESTART pgrep unclutter || unclutter
$SHCMD_ON_RESTART pgrep batsignal || batsignal -bpe -w 50 -c 20 -d 5
$SHCMD_ON_RESTART pgrep nm-applet || nm-applet
$SHCMD_ON_RESTART pgrep xss-lock || xss-lock --transfer-sleep-lock -- i3lock --nofork --color "$BG"

$SHCMD_ON_RESTART xsetroot -solid "$BG"
$SHCMD_ON_RESTART xset dpms 0 0 0
$SHCMD_ON_RESTART xset s off
$SHCMD_ON_RESTART xset r off

title_align left
font pango: Aporetic Sans Mono 10
default_orientation horizontal
workspace_layout tabbed
focus_on_window_activation focus
workspace_auto_back_and_forth no
focus_wrapping no

set $GAPSIZE 420
gaps horizontal $GAPSIZE
smart_gaps inverse_outer
default_border none
default_floating_border pixel 1

set $MOD Mod1
floating_modifier $MOD

bindsym button2 kill
bindsym --whole-window $MOD+button2 floating toggle
bindsym button4 nop
bindsym button5 nop

bindsym XF86MonBrightnessDown $SHCMD brightnessctl set 5%-
bindsym XF86MonBrightnessUp $SHCMD brightnessctl set 5%+
bindsym XF86Display $SHCMD autorandr --change
bindsym XF86Sleep $SHCMD systemctl suspend
bindsym XF86AudioLowerVolume $SHCMD pamixer --unmute --decrease 5
bindsym XF86AudioRaiseVolume $SHCMD pamixer --unmute --increase 5
bindsym XF86AudioMute $SHCMD pamixer --toggle-mute
bindsym XF86AudioMicMute $SHCMD pamixer --default-source --toggle-mute

bindsym $MOD+1 [class="Emacs"] focus
bindsym $MOD+2 [class="firefox"] focus
bindsym $MOD+3 [class="net.thunderbird.Thunderbird"] focus

set $DMENU_ARGS \
	-i \
	-b \
	-l 8 \
	-fn 'Aporetic Sans Mono-10' \
	-nb '#ffffff' \
	-nf '#000000' \
	-sb '#c8c8c8' \
	-sf '#000000'

set $ESC mode "default"
bindsym Super_L mode "prefix"
mode "prefix" {
	bindsym Super_L $ESC
	bindsym Ctrl+g $ESC

	bindsym Tab move right
	bindsym $MOD+Tab move left

	bindsym o $ESC; move workspace to output next
	bindsym r $ESC; restart
	bindsym k $ESC; kill
	bindsym g $ESC; gaps horizontal current toggle $GAPSIZE
	bindsym z $ESC; $SHCMD systemctl suspend
	bindsym x $ESC; $SHCMD i3-dmenu-desktop --dmenu "dmenu -p 'app' $DMENU_ARGS"
	bindsym s $ESC; $SHCMD scrot \
		--select \
		--file "$HOME/Pictures/screenshots/%Y-%m-%d_T%H-%M-%S.png" \
		--exec 'dunstify screenshot "$f"'
	bindsym v $ESC; $SHCMD nmcli connection up protonvpn \
		|| (nmcli connection down protonvpn && dunstify 'vpn down')

	bindsym equal $SHCMD pamixer --unmute --increase 5
	bindsym minus $SHCMD pamixer --unmute --decrease 5
	bindsym 0 $SHCMD pamixer --toggle-mute
}

# class			border		bg		text	indicator	child_border/floating
client.focused		$BG		$BG		$FG	$FG		$BORDER
client.focused_inactive	$BORDER		$STATUS_BG	$FG	$FG		$BORDER
client.unfocused	$BORDER    	$STATUS_BG	$FG	$FG		$BORDER
client.urgent		$URGENT_BG	$URGENT_BG	$FG	$FG		$URGENT_BG
client.background	$BORDER

bar {
	mode hide
	position bottom
	workspace_buttons no
	workspace_min_width 50
	binding_mode_indicator yes
	modifier none
	tray_output primary
	status_command i3status
	separator_symbol " "

	colors {
		background $STATUS_BG
		statusline $FG
		separator $FG
		# class			border		bg		fg
		binding_mode		$STATUS_BG	$STATUS_BG	$STATUS_BG
		focused_workspace	$BORDER		$BG		$FG
		active_workspace	$BORDER		$STATUS_BG	$FG
		inactive_workspace	$BORDER		$STATUS_BG	$FG
		urgent_workspace	$BORDER		$URGENT_BG	$FG
	}
}
