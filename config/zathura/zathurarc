set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1
set selection-clipboard clipboard
set window-title-basename true
set statusbar-basename true
set font "Aporetic Sans Mono 10"
set adjust-open "best-fit"
set window-title-page true
set render-loading true
set recolor-keephue true

# modus operandi theme
set notification-error-bg       "#c8c8c8"
set notification-error-fg       "#7f0000"
set notification-warning-bg     "#c8c8c8"
set notification-warning-fg     "#5f0070"
set notification-bg             "#c8c8c8"
set notification-fg             "#002580"
set completion-group-bg         "#f2f2f2"
set completion-group-fg         "#000000"
set completion-bg               "#ffffff"
set completion-fg               "#000000"
set completion-highlight-bg     "#c0deff"
set completion-highlight-fg     "#000000"
set index-bg                    "#ffffff"
set index-fg                    "#000000"
set index-active-bg             "#c0deff"
set index-active-fg             "#000000"
set inputbar-bg                 "#ffffff"
set inputbar-fg                 "#000000"
set statusbar-bg                "#c8c8c8"
set statusbar-fg                "#000000"
set default-bg                  "#ffffff"
set default-fg                  "#000000"
set render-loading-fg           "#000000"
set render-loading-bg           "#ffffff"
set recolor-lightcolor          "#ffffff"
set recolor-darkcolor           "#000000"
# set highlight-color             "#a4d5f9"
# set highlight-active-color      "#f3d000"

map [index] <A-\<>   navigate_index top
map [index] <A-\>>   navigate_index bottom
map [index] \<   navigate_index top
map [index] \>   navigate_index bottom
map [index] <A-i>   navigate_index collapse-all
map [index] <A-v>   navigate_index up
map [index] <C-b>   navigate_index collapse
map [index] <C-f>   navigate_index expand
map [index] <C-i>   navigate_index expand-all
map [index] <C-m>   navigate_index select
map [index] <C-n>   navigate_index down
map [index] <C-p>   navigate_index up
map [index] <C-v>   navigate_index down

map [normal] <C-r>   search backward
map [normal] <C-s>   search forward
map [normal] +   zoom in
map [normal] =   zoom in
map [normal] \'   mark_evaluate
map [normal] d   toggle_page_mode
map [normal] i   toggle_index
map [normal] m   mark_add
map [normal] C-n   scroll down
map [normal] C-p   scroll up
map [normal] f navigate next
map [normal] b navigate previous
map [normal] n   scroll down
map [normal] p   scroll up
map [normal] u   jumplist backward
map [normal] S-u jumplist forward
map [normal] <C-g> abort
map [normal] <C-v> scroll full-down
map [normal] <A-\<> goto top
map [normal] \< goto top
map [normal] \> goto bottom
map [normal] <A-\>> goto bottom
map [normal] <A-v> scroll full-up
