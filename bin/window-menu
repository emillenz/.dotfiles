#!/bin/env ruby

# ---
# title:  i3 window select menu
# author: emil lenz
# email:  emillenz@protonmail.com
# date:   [2024-05-15]
# dependencies: i3, dmenu
# info: 
#   - ARGV passed as args to dmenu (use it to customize dmenu appearance)
# ---

require 'json'
require 'open3'

def main
	window_nodes = window_nodes(JSON.parse(`i3-msg -t get_tree`))
	window_titles = window_nodes.map { |win| win[:name] }.join("\n")

	selected_title, status = Open3.capture2(
		'dmenu', '-p', "window-menu",
		*ARGV,
		stdin_data: window_titles
	)

	status.success? || exit(1)
	sel_window = window_nodes.find { |win| win[:name] == selected_title.chomp }
	exec('i3-msg', "[con_id=#{sel_window[:id]}] focus")
end

def window_nodes(node)
	return if node.nil?

	if node['window_type'] == 'normal'
		{
			id: node['id'],
			name: node['window_properties']['title'],
			class: node['window_properties']['class']
		}
	else
		(node['nodes'] || []).flat_map { |child_node| window_nodes(child_node) }
	end
end

main
