set nocompatible
set hidden
set autoindent
set autowriteall
set ignorecase
set smartcase
set incsearch
set noesckeys
set notimeout
set smarttab
set confirm
set backupdir=~/.vim//,/tmp//
set directory=~/.vim//,/tmp//
set path=**
set wildignore=*.o
set completeopt=
set wildmenu
set gdefault
set autoread
set relativenumber
set showmatch
set noruler
set noshowmode
set laststatus=0
set fillchars=eob:\ "
" syntax off

" consistency
nnoremap Y y$
nnoremap _ "_d

" disable inefficies
nnoremap v <nop>
nnoremap V <nop>
nnoremap { <nop>
nnoremap } <nop>

" autoindent brace-block
inoremap {<cr> {<cr>}<esc>O<tab>
