set nocompatible
set showcmd
set hidden
set autoindent
set autowriteall
set ignorecase
set smartcase
set incsearch
set nostartofline
set smarttab
set confirm
set backupdir=~/.vim//,/tmp//
set undodir=~/.vim//,/tmp//
set directory=~/.vim//,/tmp//
set undofile
set path=**
set shortmess=a
set completeopt=
set wildignore=*.o,.*
set wildmenu
set wildmode=longest:full
set wildignorecase
set wildoptions="fuzzy,wild,pum"
set gdefault
set autoread
set relativenumber
set noruler
set noshowmode
set laststatus=0
set fillchars=eob:\ ,
set ttimeout
set ttimeoutlen=50
set formatoptions+=jn
set iskeyword+=-
set wrap
set linebreak
" syntax off

autocmd BufWritePre * :%s/\s\+$//e " rm trailing whitespace

nnoremap Y y$
nnoremap _ "_d

nnoremap go mzo<esc>`z
nnoremap gO mzO<esc>`z

onoremap { V{
onoremap } V}

vnoremap > >gv
vnoremap < <gv

nnoremap Q @q
vnoremap Q :normal ^@q<cr>
vnoremap @ :normal ^@

inoremap {<cr> {<cr>}<esc>O<tab>

nnoremap <c-d> <c-d>zz
nnoremap <c-u> <c-u>zz

vnoremap s( <esc>a)<esc>`<i(<esc>
vnoremap s{ <esc>a}<esc>`<i{<esc>
vnoremap s[ <esc>a]<esc>`<i[<esc>
vnoremap s" <esc>a"<esc>`<i"<esc>

nnoremap ds( mzva(<esc>"_x`<"_x`z
nnoremap ds{ mzva{<esc>"_xgvo<esc>"_x`z
nnoremap ds[ mzva[<esc>"_xgvo<esc>"_x`z
nnoremap ds" mzva"<esc>"_xgvol<esc>"_x`z
