set hidden
set showcmd
set autoindent
set ignorecase
set smartcase
set incsearch
set nostartofline
set smarttab
set confirm
set nobackup
set undofile
set undodir=~/.vim//,/tmp//
set directory=~/.vim//,/tmp//
set path+=**/*
set shortmess=a
set completeopt=
set wildignore=*.o,.*,.a,.so
set wildmenu
set wildignorecase
set wildoptions="fuzzy,wild,pum"
set wildchar=<c-@>
set wildmode=longest:full
set gdefault
set autoread
set relativenumber
set noruler
set noshowmode
set laststatus=0
set fillchars=eob:\ ,lastline:\ ,
set ttimeout
set ttimeoutlen=50
set formatoptions+=jn
set iskeyword+=-
set wrap
set breakindent
set linebreak
set shellcmdflag=-lc
set background=light

autocmd BufWritePre * :silent %s/\s\+$//e

nnoremap gf gF
nnoremap Y y$
nnoremap _ "_d
inoremap {<cr> {<cr>}<esc>O<tab>
nnoremap \ i<cr><esc>

nnoremap <c-c> <nop>
nnoremap s <nop>
nnoremap S <nop>
nnoremap v <nop>
nnoremap V <nop>

onoremap { V{
onoremap } V}

nnoremap p ]p
nnoremap P [p

map [[ ?{<CR>w99[{
map ][ /}<CR>b99]}
map ]] j0[[%/{<CR>
map [] k$][%?}<CR>

nnoremap Q @q
cnoremap @ normal @

nnoremap <c-d> <c-d>zz
nnoremap <c-u> <c-u>zz

nnoremap go mqo<esc>`q
nnoremap gO mqO<esc>`q

nnoremap s mqv
nnoremap ss mqV
vnoremap ( <esc>`>a)<esc>`<i(<esc>`q
vnoremap [ <esc>`>a]<esc>`<i[<esc>`q
vnoremap { <esc>`>a}<esc>`<i{<esc>`q
vnoremap " <esc>`>a"<esc>`<i"<esc>`q
vnoremap ' <esc>`>a'<esc>`<i'<esc>`q
nnoremap ds( mqva(<esc>`>"_x`<"_x`q
nnoremap ds[ mqva[<esc>`>"_x`<"_x`q
nnoremap ds{ mqva{<esc>`>"_x`<"_x`q
nnoremap ds" mqva"<esc>`>"_x`<"_x`q
nnoremap ds' mqva'<esc>`>"_x`<"_x`q
