set nocompatible
set hidden
set autoindent
set autowriteall
set ignorecase
set smartcase
set incsearch
set smarttab
set confirm
set backupdir=~/.vim//,/tmp//
set directory=~/.vim//,/tmp//
set path=**
set shortmess=a
set completeopt=
set wildmode=longest:full
set wildignore=*.o
set wildmenu
set wildignorecase
set gdefault
set autoread
set relativenumber
set noruler
set noshowmode
set laststatus=0
set fillchars=eob:\ "
set timeoutlen=1000
set ttimeoutlen=0

nnoremap Y y$
nnoremap _ "_d
nnoremap v m`v
nnoremap V <nop>

" SURROUND
vnoremap s( <esc>a)<esc>gvo<esc>i(<esc>
vnoremap s{ <esc>a}<esc>gvo<esc>i{<esc>
vnoremap s[ <esc>a]<esc>gvo<esc>i[<esc>
nnoremap ds( m`va(<esc>"_xgvo<esc>"_x<c-o>
nnoremap ds{ m`va{<esc>"_xgvo<esc>"_x<c-o>
nnoremap ds[ m`va{<esc>"_xgvo<esc>"_x<c-o>

" AUTOINDENT BRACES
inoremap {<cr> {<cr>}<esc>O<tab>
